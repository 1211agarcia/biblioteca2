{% extends '::base.html.twig' %}
{% block body -%}
{% if form is defined %}
{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-md-6 col-xs-12">
            {{ form_widget(form.q) }}
            {{ form_widget(form.submit) }}
        </div>
        <div class="col-md-6 col-xs-12">
            {{ form_label(form.desde)}}
            {{ form_widget(form.desde) }}
            {{ form_label(form.hasta)}}
            {{ form_widget(form.hasta) }}
            {{ form_label(form.escuela)}}
            {{ form_widget(form.escuela) }}
        </div>
        {{ form_widget(form._token) }}
    </div>
{{ form_rest(form) }}
{{ form_end(form, {'render_rest': false}) }}
{% endif %} 

    <h1>teg list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Titulo</th>
                <th>Publicaci√≥n</th>
                <th>Palabras Clave</th>
                <th>Autores</th>
                <th>Tutores</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('teg_show', { 'id': entity.id }) }}">{{ entity.titulo }}</a></td>
                <td>{% if entity.publicacion %}{{ entity.publicacion|date('m-Y') }}{% endif %}</td>
                <td>
                    <ul>
                    {% for palabraField in entity.palabrasClave %}
                        <li>
                            {{ palabraField }}
                        </li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                    {% for Field in entity.autores %}
                        <li>
                            {{ Field }}
                        </li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                    {% for Field in entity.tutores %}
                        <li>
                            {{ Field }}
                        </li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('teg_show', { 'id': entity.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('teg_edit', { 'id': entity.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('teg_new') }}">
                Nuevo TEG
            </a>
        </li>
    </ul>
    {% endblock %}
