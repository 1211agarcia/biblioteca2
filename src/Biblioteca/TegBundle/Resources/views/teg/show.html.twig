{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/bootstrap-switch.min.css') }}" type="text/css" rel="stylesheet" />

{% endblock %} 
{% block body %}
    <div class="form-inline">
            <a href="{{ path('teg') }}">
            Back to the list</a>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a class="button edit btn-warning" href="{{ path('teg_edit', { 'id': entity.id }) }}">
                Editar
                </a>
                {{ form_start(publish_form) }}
                {{ form_errors(publish_form) }}
                    <div class="checkbox">
                        <label>
                            {{ form_label(publish_form.published)}}{{ form_widget(publish_form.published) }}
                        </label>
                        {{ form_widget(publish_form.submit) }}
                    </div>
                    {{ form_widget(publish_form._token) }}
                {{ form_rest(publish_form) }}
                {{ form_end(publish_form, {'render_rest': false}) }}
            {% endif %}
        </div>
    <div class="col-md-2 col-xs-12">
    <ul class="nav nav-pills">
        <li class="active"><a data-toggle="tab" href="#detalles">Detalles</a></li>
        {% for iField in entity.capitulos %}
                <li><a data-toggle="tab" href="#capitulo">{{ iField }}</a></li>
        {% endfor %}
    </ul>

    </div>
    <div class="tab-content">
        <div id="detalles" class="tab-pane fade in active form-horizontal col-md-9 col-xs-12">
            <h3>{{ entity.titulo }}</h3>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Autor(es)</label> 
                <div class="col-xs-9 col-md-4">
                    <p class="form-control-static">{% for iField in entity.autores %} {{ iField }}, {% endfor %}</p>
                </div>
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Tutor(es)</label> 
                <div class="col-xs-9 col-md-4">
                    <p class="form-control-static">{% for iField in entity.tutores %} {{ iField }}, {% endfor %}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Publicaci√≥n</label> 
                <div class="col-xs-9 col-md-4">
                    <p class="form-control-static">{{ entity.publicacion|date('d-m-Y') }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Resumen</label> 
                <div id="resumen" class="col-xs-12 col-md-9">
                    <p>{{ entity.resumen}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Palabras Clave</label> 
                <div class="col-xs-9">
                    <p class="form-control-static">{% for iField in entity.palabrasclave %} {{ iField }}, {% endfor %}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">cota</label> 
                <div class="col-xs-9">
                    <p class="form-control-static">{{ entity.cota}}</p>
                </div>
            </div>
        </div>
        <div id="capitulo" class="tab-pane fade form-horizontal col-md-9 col-xs-12">
            <iframe id="viewer" src="{{ asset('bundles/bibliotecateg/js/viewer.js/index.html') }}#{{ asset('uploads/capitulos/capitulo1.pdf') }}"
             width='100%' height='500px'
            ></iframe>
        </div>
    </div>
    
<a href="{{ asset('bundles/bibliotecateg/js/viewer.js/index.html') }}#{{ asset('uploads/capitulos/capitulo1.pdf') }}"> AQUI </a>
            
    
    
{% endblock %}
{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('js/bootstrap-switch.min.js') }}" type="text/javascript"></script>
<script type="text/javascript">$("[name='form[published]']").bootstrapSwitch();</script>

{% endblock %}