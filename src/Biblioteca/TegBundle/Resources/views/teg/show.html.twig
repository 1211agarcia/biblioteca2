{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}

{% endblock %} 
{% block body %}
<div ng-controller="showTegController as ctrl">
    <div class="form-inline">
            <a href="{{ path('teg') }}"><i class="fa fa-arrow-left fa-fw"></i><span>&nbsp;Back to the list</a>
            {% if edit is defined and edit %}
                <a class="btn btn-warning" href="{{ path('teg_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o fa-lg"></i>&nbsp;Editar</a>
            {% endif %}
            {% if publish_form is defined %}
                {{ form_start(publish_form) }}
                {{ form_errors(publish_form) }}
                    <div class="checkbox">
                        <label>
                            {{ form_label(publish_form.published)}}{{ form_widget(publish_form.published) }}
                        </label>
                        {{ form_widget(publish_form.submit) }}
                    </div>
                    {{ form_widget(publish_form._token) }}
                {{ form_rest(publish_form) }}
                {{ form_end(publish_form, {'render_rest': false}) }}
            {% endif %}
            {% if isSAdmin or isAdmin %}
                creado por <a href="{{ path('teg') }}">{{entity.creator}}</a>
            {% endif %}
    </div>
    <div class="col-md-2 col-xs-12">
        <ul class="nav nav-pills">
            <li class="active"><a data-toggle="tab" href="#detalles">Detalles</a></li>
            <li ><a data-toggle="tab" href="#capitulo">Detalles</a></li>
            
        </ul>
    </div>
    <div class="tab-content  form-horizontal col-md-9 col-xs-12">
        <div id="detalles" class="tab-pane fade in active">
            <h3>{{ entity.titulo }}</h3>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Autor(es)</label> 
                <div class="col-xs-9 col-md-4">
                    <p class="form-control-static">{% for iField in entity.autores %} {{ iField }}, {% endfor %}</p>
                </div>
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Tutor(es)</label> 
                <div class="col-xs-9 col-md-4">
                    <p class="form-control-static">{% for iField in entity.tutores %} {{ iField }}, {% endfor %}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Publicación</label> 
                <div class="col-xs-9 col-md-4">
                    <p class="form-control-static">{{ entity.publicacion|date('d-m-Y') }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Resumen</label> 
                <div id="resumen" class="col-xs-12 col-md-9">
                    <p>{{ entity.resumen}}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">Palabras Clave</label> 
                <div class="col-xs-9">
                    <p class="form-control-static">{% for iField in entity.palabrasclave %} {{ iField }}, {% endfor %}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 col-xs-6 col-md-2 control-label">cota</label> 
                <div class="col-xs-9">
                    <p class="form-control-static">{{ entity.cota}}</p>
                </div>
            </div>
        </div>
        <div id="capitulo" class="tab-pane fade" ng-init="initViewer('{{ asset('bundles/bibliotecateg/js/viewer.js/index.html') }}')">
            <select class="btn btn-default" ng-model="chapterSelected" placeholder="Archivos">
                {% for iField in entity.capitulos %}
                <option ng-init="addChapter({{ loop.index0 }}, '{{ asset('uploads/capitulos/capitulo' ~ loop.index ~ '.pdf') }}','{{iField.name}}');" value="[[chapters[{{ loop.index0 }}].url]]" {% if loop.index0 == 0 %}ng-selected="true"{% endif %}>[[chapters[{{ loop.index0 }}].name]]</option>
                {% endfor %}
            </select>
            <a class="btn btn-default" download ng-href="[[detailFrame]]">Descargar&nbsp;<i class="fa fa-cloud-download fa-lg"></i></a>
            <a class="btn btn-default" target="_blank" ng-href="[[detailFrame]]">Abrir en nueva pestaña&nbsp;<i class="fa fa-external-link fa-lg"></i></a>
            <iframe ng-init="initChapterSelected();" ng-src="[[chapterSelected]]" name="viewer" id="viewer" width='100%' height='500px' allowfullscreen></iframe>
            
        </div>
    </div>
</span>    

<span>
[[detailFrame]]
</span>
<input type="text" ng-model="detailFrame" />

<span>detail:[[detailFrame]]</span>
<span>select:[[chapterSelected]]</span>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/tegController.js') }}" type="text/javascript"></script>
        
{% endblock %}