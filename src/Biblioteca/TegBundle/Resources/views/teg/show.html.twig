            <div class="col-xs-9">
                <p class="form-control-static">    {{ entity.publicacion|date('d-m-Y') }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-3 control-label">Resumen</label> 
            <div class="col-xs-9">
                <p class="form-control-static">    {{ entity.resumen}}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-3 control-label">Autor(es)</label> 
            <div class="col-xs-9">
                <p class="form-control-static">    {% for iField in entity.autores %} {{ iField }}, {% endfor %}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-3 control-label">Tutor(es)</label> 
            <div class="col-xs-9">
                <p class="form-control-static">    {% for iField in entity.tutores %} {{ iField }}, {% endfor %}</p>
            </div>
        </div>
    </div>
    

            
