{% extends 'BibliotecaUserBundle::layout.html.twig' %}
{% block fos_user_content %}
{% if form is defined %}
{{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-md-6 col-xs-12">
            {{ form_widget(form.q) }}
            {{ form_widget(form.submit) }}
        </div>
        <div class="col-md-6 col-xs-12">
            {{ form_label(form.desde)}}
            {{ form_widget(form.desde) }}
            {{ form_label(form.hasta)}}
            {{ form_widget(form.hasta) }}
            {{ form_label(form.escuela)}}
            {{ form_widget(form.escuela) }}
        </div>
        {{ form_widget(form._token) }}
    </div>
{{ form_rest(form) }}
{{ form_end(form, {'render_rest': false}) }}
{% endif %} 
 
    <table id="tabla-users" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr><a class="btn btn-success" href="{{ path('fos_user_registration_register') }}"><i class="fa fa-user-plus fa-fw"></i><span>&nbsp;Añadir usuario</a></tr>
            <tr>                
                <th><i class="fa fa-user"></i> Usuario</th>
                <th>Rol</th>
                <th><i class="fa fa-calendar"></i> Último Acceso</th>
                <th><i class="fa fa-cogs"></i> Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { id: user.id }) }}">{{ user.username }}</a></td>
                <td>{{ user.roles[0] }}</td>
                <td>{% if user.lastLogin %}{{ user.lastLogin|date('Y-m-d H:i') }}{% else %}nunca{% endif %}</td>
                <td>
                    <div class="item-actions">
                        {% if not user.locked %}
                            <a href="{{ path('user_show', { id: user.id }) }}" class="btn btn-sm btn-danger">
                                <i class="fa fa-lock"></i>&nbsp;Bloquear</a>
                        {% else %}
                            <a href="{{ path('user_show', { id: user.id }) }}" class="btn btn-sm btn-default">
                                <i class="fa fa-unlock"></i>&nbsp;Desbloquear</a>
                        {% endif %}
                        {% if not user.enabled %}
                            <a href="{{ path('user_show', { id: user.id }) }}" class="btn btn-sm btn-success">
                                <i class="fa fa-check"></i>&nbsp;Confirmar cuenta</a>
                        {% endif %}
                        {# % if user.isAuthor(app.user) % #}
                            <a href="{{ path('user_show', { id: user.id }) }}" class="btn btn-sm btn-warning">
                                <i class="fa fa-edit"></i>&nbsp;Editar</a>
                        {#% endif % #}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

